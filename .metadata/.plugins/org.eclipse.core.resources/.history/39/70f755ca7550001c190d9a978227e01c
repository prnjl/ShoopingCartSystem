	@Override
	public List<Ewallet> getWallets() {
		
		return (List<Ewallet>) EwalRepo.findAll();
	}

	@Override
	public Ewallet addWallet(Ewallet ewal) {
		
		Ewallet ew = EwalRepo.save(ewal);
		return ew;
	}

