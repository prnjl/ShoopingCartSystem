package com.casestudy.CartService.service;

import java.util.List;
import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;

import com.casestudy.CartService.model.Cart;
import com.casestudy.CartService.repository.CartRepository;

public class CartServiceImpl implements CartService {
	
	@Autowired
	CartRepository cartrepoaitory;

	@Override
	public Cart additemtocart(Cart cart) {
		
		Cart c=cartrepoaitory.save(cart);
		return c ;
	}

	@Override
	public List<Cart> getAll() {
		
		return cartrepoaitory.findAll();
	}

	@Override
	public Optional<Cart> getCartItemById(int cartId) {
		
		return cartrepoaitory.findById(cartId);
	}

	@Override
	public String deleteItembyId(int cartId) {
		cartrepoaitory.deleteById(cartId);
		return ;
	}

	@Override
	public String updateCropDetails(Cart cart, int cartId) {
		// TODO Auto-generated method stub
		return null;
	}


}